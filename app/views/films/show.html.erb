
<h1><%= @film.title %></h1>
<%= link_to  "home", films_path %>


<p>genre: <%= @film.genre %></p>
<p>year: <%= @film.year %></p>
<p>synopsis: <%= @film.synopsis %></p>
<%= image_tag @film.picture %>
<div>
<%= link_to  "edit", edit_film_path %>
<%= form_for @film, method: :delete do |f| %>
    <%= f.submit "delete", class: 'delete' %>
<% end %>
</div>

